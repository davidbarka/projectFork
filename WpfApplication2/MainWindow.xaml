<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="window" x:Class="ForkliftManager.MainWindow"
        Title="Forklift organizer" Height="700" Width="1024" BorderThickness="0" BorderBrush="White" MinWidth="1024" MinHeight="600" Closing="window_Closing" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Foreground="White">
    <Window.Background>
        <ImageBrush Stretch="UniformToFill"/>
    </Window.Background>

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="37"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="206"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Margin="-6,-99,-2,0" Grid.RowSpan="2" Source="bg.jpg" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Stretch="UniformToFill" />
        <Label x:Name="interLabel" Content="internnummer" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Height="26" Width="106" Grid.Row="1"/>
        <Label x:Name="plassLabel" Content="plassering" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Height="31" Width="106" Grid.Row="1"/>
        <Label x:Name="serieLabel" Content="serienummer" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Height="26" Width="106" Grid.Row="1"/>
        <Label x:Name="labelSearch" Content="søk" Margin="0,-3,136,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Height="35" Grid.Column="1" HorizontalAlignment="Right" Width="69"/>
        <Label x:Name="label" Content="legg til" HorizontalAlignment="Left" Margin="0,-9,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Grid.RowSpan="2" Height="58" Width="280" Grid.ColumnSpan="2" />
        <TextBox x:Name="RegNummer" HorizontalAlignment="Left" Height="26" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" ToolTip="Internnummer" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <Button x:Name="AddBtn" Content="Add" Margin="99,0,10,10" Click="AddBtn_Click" Grid.Row="1" FontSize="18" Height="30" VerticalAlignment="Bottom"/>
        <Grid x:Name="listView" Margin="0,0,-2,21" Grid.Row="1" Grid.Column="1">
            <ScrollViewer x:Name="scroller" Margin="0,0,10,0">
                <StackPanel x:Name="cardStack"/>
            </ScrollViewer>
        </Grid>
        <TextBox x:Name="SerieNr" HorizontalAlignment="Left" Height="26" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" ToolTip="Serienummer" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <TextBox x:Name="plassering" HorizontalAlignment="Left" Height="26" Margin="10,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" ToolTip="Plassering" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <TextBox x:Name="search" Grid.Column="1" Height="23" Margin="0,4,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Search" FontSize="16" KeyUp="search_KeyUp" HorizontalAlignment="Right" Width="143"/>
        <ComboBox x:Name="year" HorizontalAlignment="Left" Margin="10,0,0,214" Grid.Row="1" Width="186" ToolTip="Year" FontSize="16" BorderBrush="White" Height="26" VerticalAlignment="Bottom">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFF9F9F9" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Grid x:Name="monthGrid" Margin="10,0,0,45" Grid.Row="1" HorizontalAlignment="Left" Width="186" Height="164" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="42*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="62*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Label x:Name="label_Copy" Content="årskontroll" HorizontalAlignment="Left" Margin="0,0,0,265" FontSize="20" FontWeight="Bold" Background="{x:Null}" Foreground="#FFD1CBCB" Width="196" Grid.Row="1" Height="38" VerticalAlignment="Bottom"/>
        <TextBox x:Name="Merknad" HorizontalAlignment="Left" Height="26" Margin="10,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" ToolTip="Merknad" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <ComboBox x:Name="Type" HorizontalAlignment="Left" Margin="10,194,0,0" Grid.Row="1" VerticalAlignment="Top" Width="186" Height="26" ToolTip="Type" FontSize="16" BorderBrush="White" SelectedIndex="0">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFF9F9F9" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <System:String>EL. Motvekt</System:String>
            <System:String>Diesel Motvekt</System:String>
            <System:String>Skyvemast</System:String>
            <System:String>Ledetruck</System:String>
            <System:String>Ledestabler</System:String>
            <System:String>Sittestabler</System:String>
            <System:String>4-veistruck</System:String>
            <System:String>Kalmar</System:String>
            <System:String>Svetruck</System:String>
            <System:String>Plukktruck</System:String>
            <System:String>Kombi smalgang</System:String>
        </ComboBox>
        <CheckBox x:Name="dateCheck" Content="ukjent dato" HorizontalAlignment="Left" Margin="10,0,0,245" Grid.Row="1" ToolTip="Annual inspection date" Height="15" VerticalAlignment="Bottom" Foreground="White" />
    </Grid>
</Window>
